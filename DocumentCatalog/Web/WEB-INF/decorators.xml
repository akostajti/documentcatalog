<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/decorators">
	<excludes>
		<pattern>*.js</pattern>
		<pattern>*.css</pattern>
		<pattern>*.jpg</pattern>
		<pattern>*.png</pattern>
		<pattern>*.gif</pattern>
		<pattern>*.xml</pattern>
	</excludes>
	<decorator name="master" page="master.jsp">
		<pattern>/*</pattern>
		<excludes>
			<pattern>/login</pattern>
			<pattern>/register</pattern>
		</excludes>
	</decorator>

	<decorator name="guest" page="guest.jsp">
		<pattern>/login</pattern>
		<pattern>/register</pattern>
	</decorator>
</decorators>
